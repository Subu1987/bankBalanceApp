<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form" xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	xmlns:viz.data="sap.viz.ui5.data" controllerName="com.infocus.dataListApplication.controller.Home">
	<Page id="page" title="Fixed Cost Report" enableScrolling="true" showNavButton="true" navButtonPress="onNavBack" showFooter="false">
		<content>
			<Panel headerText="" class="sapUiResponsiveMargin border-lineRadius" width="auto">
				<content>
					<FlexBox width="100%" id="__box1" height="100%" justifyContent="Center" direction="Column" alignItems="Center">
						<items>
							<FlexBox width="90%" direction="Column" height="auto" id="tripView" wrap="Wrap" justifyContent="SpaceAround" alignItems="Center"
								visible="true">
								<VBox width="100%" direction="Row" justifyContent="SpaceBetween" wrap="Wrap">
									<HBox direction="Column" width="18%">
										<Label text="Ledger"/>
										<Input id="inputLedger" class="sapUiSmallMarginBottom" type="Text" placeholder="Enter Value" showValueHelp="true"
											valueHelpRequest="handleValueLedger" value="0L"/>
									</HBox>
									<HBox direction="Column" width="18%">
										<Label text="Company Code"/>
										<Input id="inputCompanyCode" class="sapUiSmallMarginBottom" type="Text" placeholder="Enter Value" showValueHelp="true"
											valueHelpRequest="handleValueCompanyCode" value="1100"/>
									</HBox>
									<HBox direction="Column" width="18%">
										<Label text="Fiscar Year"/>
										<Input id="inputFiscalYear" class="sapUiSmallMarginBottom" type="Text" placeholder="Enter Value" showValueHelp="true"
											valueHelpRequest="handleValueDialogFiscalYear"/>
									</HBox>
									<HBox direction="Column" width="18%">
										<Label text="From Period"/>
										<Input id="inputFromPeriod" class="sapUiSmallMarginBottom" type="Text" placeholder="Enter Value" showValueHelp="true"
											valueHelpRequest="handleValueDialogFromPeriod" value="01"/>
									</HBox>
									<HBox direction="Column" width="18%">
										<Label text="To Period"/>
										<Input id="inputToPeriod" class="sapUiSmallMarginBottom" type="Text" placeholder="Enter Value" showValueHelp="true"
											valueHelpRequest="handleValueDialogToPeriod" value="12"/>
									</HBox>
								</VBox>
							</FlexBox>
							<FlexBox width="90%" id="RadioBtn" justifyContent="SpaceAround" class="radioBtnCssRound" alignItems="Center" alignContent="Center"
								visible="true">
								<FlexBox justifyContent="Center">
									<RadioButtonGroup id="company" columns="5" class="sapUiMediumMarginBottom" select="onRadioButtonSelectReports">
										<RadioButton id="PRS" text="PRS"/>
										<RadioButton id="FTRS" text="FTRS"/>
										<RadioButton id="CORP" text="CORP"/>
										<RadioButton id="companytotal" text="TOTAL"/>
									</RadioButtonGroup>
								</FlexBox>
								<FlexBox>
									<RadioButtonGroup id="list" columns="5" class="sapUiMediumMarginBottom" select="onRadioButtonSelectList">
										<RadioButton id="detailedlist" text="Detailed List"/>
										<RadioButton id="summarylist" text="Summary List"/>
									</RadioButtonGroup>
								</FlexBox>
							</FlexBox>
							<FlexBox width="90%" justifyContent="Start" visible="true">
								<Button id="searchData" icon="sap-icon://search" text="" iconFirst="false" type="Emphasized" class="sapUiTinyMarginEnd smallIcon"
									press="getListData"/>
								<Button id="saveTripInfo" icon="sap-icon://pdf-attachment" text="" iconFirst="false" type="Emphasized" class="sapUiTinyMarginEnd smallIcon"
									press="onDownloadPDF"/>
								<Button id="refreshData" icon="sap-icon://refresh" text="" iconFirst="false" type="Emphasized" class="smallIcon" press="refreshListData"/>
							</FlexBox>
						</items>
					</FlexBox>
				</content>
			</Panel>
			<Panel headerText="{globalData>/reportS} {globalData&gt;/fiscalY}" expandable="false" expanded="false"
				class="sapUiResponsiveMargin border-lineRadius" width="auto" backgroundDesign="Solid">
				<content>
					<ScrollContainer horizontal="true" vertical="true" width="100%" height="auto">
						<l:Splitter id="splitter" height="400px">
							<Table id="dynamicTable" items="{listData>/}" fixedLayout="true" width="auto">
								<columns>
									<Column width="100px" visible="{columnVisible>/glAcct}">
										<Text text="G/L Acct"/>
									</Column>
									<Column width="200px" visible="{columnVisible>/glAcctLongText}">
										<Text text="G/L Acct Long Text"/>
									</Column>
									<Column width="200px">
										<Text text="G/L Group"/>
									</Column>
									<Column width="100px">
										<Text text="Total"/>
									</Column>
									<Column visible="{columnVisible>/l01VFlag}" width="80px">
										<Text text="Apr"/>
									</Column>
									<Column visible="{columnVisible>/l02VFlag}" width="80px">
										<Text text="May"/>
									</Column>
									<Column visible="{columnVisible>/l03VFlag}" width="80px">
										<Text text="Jun"/>
									</Column>
									<Column visible="{columnVisible>/l04VFlag}" width="80px">
										<Text text="Jul"/>
									</Column>
									<Column visible="{columnVisible>/l05VFlag}" width="80px">
										<Text text="Aug"/>
									</Column>
									<Column visible="{columnVisible>/l06VFlag}" width="80px">
										<Text text="Sep"/>
									</Column>
									<Column visible="{columnVisible>/l07VFlag}" width="80px">
										<Text text="Oct"/>
									</Column>
									<Column visible="{columnVisible>/l08VFlag}" width="80px">
										<Text text="Nov"/>
									</Column>
									<Column visible="{columnVisible>/l09VFlag}" width="80px">
										<Text text="Dec"/>
									</Column>
									<Column visible="{columnVisible>/l10VFlag}" width="80px">
										<Text text="Jan"/>
									</Column>
									<Column visible="{columnVisible>/l11VFlag}" width="80px">
										<Text text="Feb"/>
									</Column>
									<Column visible="{columnVisible>/l12VFlag}" width="80px">
										<Text text="Mar"/>
									</Column>
									<Column visible="{columnVisible>/l13VFlag}" width="80px">
										<Text text="Specl 1"/>
									</Column>
									<Column visible="{columnVisible>/l14VFlag}" width="80px">
										<Text text="Specl 2"/>
									</Column>
									<Column visible="{columnVisible>/l15VFlag}" width="80px">
										<Text text="Specl 3"/>
									</Column>
									<Column visible="{columnVisible>/l16VFlag}" width="80px">
										<Text text="Specl 4"/>
									</Column>
									<Column width="80px" visible="{columnVisible>/graphColumnVisible}">
										<Text text="Graph"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells>
											<Text text="{listData>Racct}"/>
											<Text text="{listData>GlText}"/>
											<Text text="{listData>GlAcGroup}"/>
											<Text text="{listData>Total}"/>
											<Text text="{listData>L01}"/>
											<Text text="{listData>L02}"/>
											<Text text="{listData>L03}"/>
											<Text text="{listData>L04}"/>
											<Text text="{listData>L05}"/>
											<Text text="{listData>L06}"/>
											<Text text="{listData>L07}"/>
											<Text text="{listData>L08}"/>
											<Text text="{listData>L09}"/>
											<Text text="{listData>L10}"/>
											<Text text="{listData>L11}"/>
											<Text text="{listData>L12}"/>
											<Text text="{listData>L13}"/>
											<Text text="{listData>L14}"/>
											<Text text="{listData>L15}"/>
											<Text text="{listData>L16}"/>
											<Button visible="{= ${globalData>/togglePanelVisibility} === 'X' ? false : true }" id="chartButton" icon="sap-icon://vertical-bar-chart"
												text="" press="onChartButtonPress"/>
										</cells>
									</ColumnListItem>
								</items>
								<layoutData>
									<l:SplitterLayoutData size="auto"/>
								</layoutData>
							</Table>
							<Panel id="chartPanel" width="100%">
								<content>
									<viz:VizFrame id="oVizFrame" busy="false" busyIndicatorDelay="1000" visible="true"
										vizProperties="{plotArea: { drawingEffect: 'glossy'}, title:{ text:'Data analysis through Reports'},dataLabel:{visible:true,showTotal:true}}"
										uiConfig="{ 'applicationSet': 'fiori' }" vizType="column" legendVisible="true">
										<viz:dataset>
											<viz.data:FlattenedDataset data="{chartData>/}">
												<viz.data:dimensions>
													<viz.data:DimensionDefinition name="Month" value="{chartData>Month}"/>
													<!--<viz.data:DimensionDefinition name="GlAcGroup" value="{chartData>GlAcGroup}"/>-->
												</viz.data:dimensions>
												<viz.data:measures>
													<viz.data:MeasureDefinition name="Value" value="{chartData>Value}"/>
												</viz.data:measures>
											</viz.data:FlattenedDataset>
										</viz:dataset>
										<!-- sap.viz.ui5.data.Dataset -->
										<viz:feeds>
											<viz.feeds:FeedItem id="value1" uid="valueAxis" type="Measure" values="Value"/>
											<viz.feeds:FeedItem uid="categoryAxis" type="Dimension" values="Month"/>
											<!--<viz.feeds:FeedItem uid="categoryAxis" type="Dimension" values="GlAcGroup"/>-->
										</viz:feeds>
									</viz:VizFrame>
								</content>
								<layoutData>
									<l:SplitterLayoutData size="{= ${globalData>/togglePanelVisibility} === 'X' ? '0px' : 'auto' }"
										resizable="{= ${globalData>/togglePanelVisibility} === 'X' ? false : true }"/>
								</layoutData>
							</Panel>
						</l:Splitter>
					</ScrollContainer>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>